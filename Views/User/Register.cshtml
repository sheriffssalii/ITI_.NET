@model Register

<div class="container vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">

                    <!-- Header -->
                    <div class="auth-header text-center mb-5">
                        <div class="auth-icon-wrapper mb-3">
                            <i class="bi bi-person-plus-fill text-primary" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="fw-bold text-dark mb-1">Create Account</h2>
                        <p class="text-muted fs-5">Join us today and get started</p>
                    </div>

                    <!-- Form -->
                    <form asp-action="Register" asp-controller="User" method="post" id="register-form">
                        @Html.AntiForgeryToken()

                        <!-- General Validation Errors -->
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3 mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="FirstName" class="form-control" placeholder="First Name" required />
                                    <label asp-for="FirstName"><i class="bi bi-person me-2"></i>First Name</label>
                                    <span asp-validation-for="FirstName" class="invalid-feedback d-block"></span>
                                </div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <div class="form-floating">
                                    <input asp-for="LastName" class="form-control" placeholder="Last Name" required />
                                    <label asp-for="LastName"><i class="bi bi-person me-2"></i>Last Name</label>
                                    <span asp-validation-for="LastName" class="invalid-feedback d-block"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Email Address" type="email" required />
                            <label asp-for="Email"><i class="bi bi-envelope me-2"></i>Email Address</label>
                            <span asp-validation-for="Email" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="mb-4 form-floating">
                            <input asp-for="Password" class="form-control" placeholder="Password" type="password" required />
                            <label asp-for="Password"><i class="bi bi-lock me-2"></i>Password</label>
                            <span asp-validation-for="Password" class="invalid-feedback d-block"></span>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold shadow-sm rounded-3">
                                <i class="bi bi-person-check me-2"></i>Create Account
                            </button>
                            <a asp-action="Login" asp-controller="User" class="btn btn-outline-secondary btn-lg fw-semibold rounded-3">
                                <i class="bi bi-arrow-left me-2"></i>Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="bi bi-shield-check me-1"></i>
                    Your data is secure and encrypted
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Matching Styles -->
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
    }

    .auth-icon-wrapper {
        position: relative;
    }

        .auth-icon-wrapper::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100px;
            height: 100px;
            background: linear-gradient(135deg, var(--bs-primary), var(--bs-info));
            border-radius: 50%;
            opacity: 0.1;
            z-index: -1;
        }

    .form-control {
        border-radius: 12px;
        border-width: 2px;
    }

    .form-floating > .form-control:focus ~ label {
        color: var(--bs-primary) !important;
    }

    .form-control:focus {
        border-color: var(--bs-primary);
        box-shadow: 0 0 0 0.2rem rgba(var(--bs-primary-rgb), 0.25);
    }

    .card {
        border-radius: 2rem;
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-2px);
        }

    .btn-primary {
        background: linear-gradient(135deg, var(--bs-primary), var(--bs-info));
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--bs-info), var(--bs-primary));
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(var(--bs-primary-rgb), 0.3);
        }

    .btn-outline-secondary:hover {
        border-color: var(--bs-primary);
        color: var(--bs-primary);
    }

    .auth-link:hover {
        color: var(--bs-primary) !important;
    }

    .alert-danger {
        font-size: 0.95rem;
    }
</style>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
