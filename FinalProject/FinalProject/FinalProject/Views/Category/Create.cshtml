@model Category

@{
    ViewData["Title"] = "Add New Category";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4 p-4">

                <!-- Header -->
                <div class="text-center mb-4">
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
                    <i class="bi bi-plus-circle text-success" style="font-size: 3rem;"></i>
                    <h2 class="fw-bold text-success">Add New Category</h2>
                    <p class="text-muted mb-0">Create a new category</p>
                </div>

                <!-- Form -->
                <form asp-action="Create">
                    <div class="form-floating mb-4">
                        <input asp-for="Name" class="form-control" placeholder="Category Name" />
                        <label asp-for="Name"><i class="bi bi-tag me-2"></i>Category Name</label>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-success btn-lg rounded-3 fw-semibold">
                            <i class="bi bi-check-circle me-1"></i> Add Category
                        </button>
                        <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary btn-lg rounded-3">
                            <i class="bi bi-x-circle me-1"></i> Cancel
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}
