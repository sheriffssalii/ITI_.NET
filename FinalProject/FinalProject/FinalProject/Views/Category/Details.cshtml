@model Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg border-0 rounded-4 p-4">

                <!-- Header -->
                <div class="text-center mb-4">
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
                    <i class="bi bi-info-circle text-success" style="font-size: 3rem;"></i>
                    <h2 class="fw-bold text-success">Category Details</h2>
                </div>

                <!-- Details -->
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong><i class="bi bi-tag me-2"></i>@Html.DisplayNameFor(e => e.Name):</strong> @Model.Name
                    </li>
                    <li class="list-group-item">
                        <strong><i class="bi bi-hash me-2"></i>@Html.DisplayNameFor(e => e.CategoryId):</strong> @Model.CategoryId
                    </li>
                </ul>

                <!-- Back Button -->
                <div class="d-grid mt-4">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-3">
                        <i class="bi bi-arrow-left me-1"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
