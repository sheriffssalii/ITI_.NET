@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products List";
}

<div class="container my-5">
    <!-- Header and Add Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold" style="color: #1d8348;">FinalProject</h1>
        <a asp-controller="Product" asp-action="Create" class="btn btn-success btn-lg rounded-3 shadow">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Product Grid -->
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 border-0 rounded-4 shadow-lg product-card">
                        <div class="card-img-top-wrapper position-relative overflow-hidden rounded-top-4">
                            @if (!string.IsNullOrEmpty(item.ImagePath))
                            {
                                <img src="@item.ImagePath" class="card-img-top product-image" alt="@item.Title" />
                            }
                            else
                            {
                                <div class="d-flex align-items-center justify-content-center bg-secondary text-white" style="height: 200px;">
                                    <span>No Image</span>
                                </div>
                            }

                            @if (item.Quantity == 0)
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">Out of Stock</span>
                            }
                            else if (item.Quantity <= 10)
                            {
                                <span class="badge bg-warning text-dark position-absolute top-0 end-0 m-2">Low Stock</span>
                            }
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title text-dark fw-bold">@item.Title</h5>
                            <p class="card-text text-muted mb-2" title="@item.Description">
                                @(item.Description.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)
                            </p>

                            <p class="fw-semibold fs-5" style="color: #28a745;">$@item.Price.ToString("F2")</p>
                            <p class="text-muted small mb-3">Quantity: <strong>@item.Quantity</strong></p>

                            <div class="mt-auto d-grid gap-2">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-outline-primary btn-sm rounded-pill">
                                    <i class="bi bi-eye me-1"></i> View
                                </a>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-outline-secondary btn-sm rounded-pill">
                                    <i class="bi bi-pencil me-1"></i> Edit
                                </a>
                                <form asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProductId" method="post"
                                      onsubmit="return confirm('This Product Will Be Permanently Deleted. Are You Sure?')">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill">
                                        <i class="bi bi-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Summary -->
        <div class="mt-4 text-end">
            <p class="text-muted">Total Products: <strong>@Model.Count()</strong></p>
        </div>
    }
    else
    {
        <!-- No Products Message -->
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No Products Found!</h4>
            <p>There are currently no products in the database.</p>
            <hr>
            <a asp-controller="Product" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Your First Product
            </a>
        </div>
    }
</div>

<!-- Styles -->
<style>
    .product-card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        background-color: #fefefe;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

    .product-image {
        width: 100%;
        height: 200px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
    }

    .card-img-top-wrapper:hover .product-image {
        transform: scale(1.05);
    }

    .card-title {
        font-size: 1.25rem;
    }

    .btn {
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            opacity: 0.9;
        }

    .badge {
        font-size: 0.75rem;
        padding: 0.4em 0.6em;
    }

    .rounded-top-4 {
        border-top-left-radius: 1rem !important;
        border-top-right-radius: 1rem !important;
    }
</style>

<!-- Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.0/font/bootstrap-icons.min.css" rel="stylesheet" />
