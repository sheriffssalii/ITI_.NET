@model Product

<div class="d-flex justify-content-center">
    <h1 class="text-success fw-bold">Product Details</h1>
</div>

<hr class="mb-4" />

<div class="d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-4" style="width: 22rem;">

        <!-- Product Image -->
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" class="card-img-top rounded-top-4"
                 alt="@Model.Title" style="object-fit: cover; height: 250px;" />
        }
        else
        {
            <div class="bg-light d-flex align-items-center justify-content-center rounded-top-4"
                 style="height: 250px;">
                <span class="text-muted">No Image Available</span>
            </div>
        }

        <div class="card-body">
            <h4 class="card-title fw-bold">@Model.Title</h4>
            <p class="card-subtitle text-muted mb-3">ID: @Model.ProductId</p>

            <p class="mb-2">
                <strong>@Html.DisplayNameFor(e => e.Description):</strong> @Model.Description
            </p>

            <p class="mb-2">
                <strong>@Html.DisplayNameFor(e => e.Quantity):</strong> @Model.Quantity
            </p>

            <p class="mb-2 text-success fw-bold fs-5">
                <strong>@Html.DisplayNameFor(e => e.Price):</strong> $@Model.Price
            </p>

            <p class="mb-2">
                <strong>@Html.DisplayNameFor(e => e.Category):</strong>
                <span class="badge bg-primary">@Model.Category.CategoryId</span>
            </p>

            <div class="d-flex justify-content-center">
                <a asp-controller="Product" asp-action="Index"
                   class="btn btn-outline-secondary px-4 mt-3 rounded-pill">
                    Back to Products
                </a>
            </div>
        </div>
    </div>
</div>
